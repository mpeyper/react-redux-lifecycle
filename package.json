{
  "name": "react-redux-lifecycle",
  "version": "2.1.0",
  "description": "A higher-order component to dispatch actions on react lifecycle methods",
  "author": "Michael Peyper",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "typings": "src/index.d.ts",
  "sideEffects": false,
  "files": [
    "lib",
    "es",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mpeyper/react-redux-lifecycle.git"
  },
  "scripts": {
    "start": "npm run test:watch",
    "prebuild": "rimraf lib es",
    "build": "rollup -c",
    "lint": "eslint src/ --ext .js --ext .jsx",
    "lint:fix": "eslint src/ --ext .js --ext .jsx --fix",
    "test": "cross-env NODE_ENV=test JEST_JUNIT_OUTPUT=./test-reports/test-output.xml jest --coverage",
    "test:watch": "npm test -- --watch",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "@types/react": "^16.0.38",
    "hoist-non-react-statics": "^2.3.1",
    "recompose": "^0.26.0"
  },
  "peerDependencies": {
    "react": "^15.1 || ^16.0",
    "react-redux": "^5.0.0",
    "redux": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^22.2.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "cross-env": "^5.1.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.17.0",
    "eslint-plugin-react": "^7.6.1",
    "jest": "^22.3.0",
    "jest-cli": "^22.3.0",
    "jest-junit": "^3.6.0",
    "raf": "^3.4.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-test-renderer": "^16.2.0",
    "redux": "^3.7.2",
    "redux-mock-store": "^1.5.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.56.0",
    "rollup-plugin-babel": "^3.0.3",
    "typescript": "^2.7.1",
    "typescript-definition-tester": "0.0.5"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup.js",
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "testResultsProcessor": "./node_modules/jest-junit"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  }
}
