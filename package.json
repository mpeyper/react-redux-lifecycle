{
  "name": "react-redux-lifecycle",
  "version": "2.1.0",
  "description": "A higher-order component to dispatch actions on react lifecycle methods",
  "author": "Michael Peyper",
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/mpeyper/react-redux-lifecycle.git"
  },
  "scripts": {
    "start": "npm run test:watch",
    "build": "babel src --out-dir lib --copy-files",
    "lint": "eslint src/ --ext .js --ext .jsx",
    "lint:fix": "eslint src/ --ext .js --ext .jsx --fix",
    "test": "JEST_JUNIT_OUTPUT=./test-reports/test-output.xml jest --coverage",
    "test:watch": "npm test -- --watch",
    "prepublish": "npm run build"
  },
  "peerDependencies": {
    "react": "^15.1 || ^16.0",
    "react-redux": "^5.0.0"
  },
  "devDependencies": {
    "@types/react": "^16.0.25",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-jest": "^21.2.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "^4.11.0",
    "eslint-plugin-react": "^7.5.1",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "jest-junit": "^3.3.0",
    "raf": "^3.4.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-redux": "^5.0.6",
    "react-test-renderer": "^16.1.1",
    "redux": "^3.7.2",
    "redux-mock-store": "^1.3.0",
    "typescript": "^2.6.1",
    "typescript-definition-tester": "0.0.5"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup.js",
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "testResultsProcessor": "./node_modules/jest-junit"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  }
}
